#/bin/sh
versionSuffix=$1
pr_number=$(basename "${CIRCLE_PULL_REQUEST}")
message="Preview environment is now available at https://fe-${versionSuffix}.preview.roundingwell.com"
url="https://api.github.com/repos/${CIRCLE_PROJECT_USERNAME}/${CIRCLE_PROJECT_REPONAME}/issues/${pr_number}/comments"
payload=$(printf '{"body": "%s"}' "$message")
curl -H "Authorization: token ${CIRCLE_TOKEN}" \
-X POST \
-d "${payload}" \
"${url}"
