<div class="programs-sidebar__heading">{{ @intl.admin.program.sidebar.stateView.state }}</div>
<div class="programs-sidebar__item programs-sidebar__published{{#if published}} is-published{{/if}}">
  {{#if published}}{{fas "toggle-on"}}{{else}}{{far "toggle-off"}}{{/if}}
  {{formatMessage (intlGet "admin.program.sidebar.stateView.published") published=published}}
</div>
<button class="flex--end-row js-state-toggle programs-sidebar__state-toggle programs-sidebar__published{{#unless published}} is-published{{/unless}}">
  {{#if published}}{{far "toggle-off"}}{{else}}{{fas "toggle-on"}}{{/if}}
  {{formatMessage (intlGet "admin.program.sidebar.stateView.toggle") published=published}}
</button>
