<td class="table-list__cell w-40">
  <span class="program-flow__action-icon">{{far "file-alt"}}</span>{{~ remove_whitespace ~}}
  <span class="program-flow__action-name">
    {{ name }}{{~ remove_whitespace ~}}
    {{~#unless name}}<em>{{ @intl.admin.program.flow.actionItemTemplate.newProgramFlowAction }}</em>{{/unless~}}
  </span>
</td>
<td class="table-list__cell w-60">
  <div class="pos--relative">
    <span class="table-list__meta" data-published-region></span>{{~ remove_whitespace ~}}
    <span class="table-list__meta" data-owner-region></span>{{~ remove_whitespace ~}}
    <span class="table-list__meta" data-due-region></span>{{~ remove_whitespace ~}}
    <span class="table-list__meta">
      {{#if hasAttachment}}
        <button class="js-attachment button-secondary--compact is-icon-only">{{far "poll-h"}}</button>
      {{/if }}
    </span>{{~ remove_whitespace ~}}
    <span class="program-flow__action-ts">{{formatDateTime updated_at "TIME_OR_DAY"}}</span>
    <span class="program-flow__sort-handle js-sort">{{fas "grip-vertical"}}</span>{{~ remove_whitespace ~}}
  </div>
</td>
